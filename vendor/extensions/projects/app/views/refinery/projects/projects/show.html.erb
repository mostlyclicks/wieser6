
<div class="row-fluid">
  <div class="span12">
    <%= image_fu @project.hero_image, nil %>
  </div>

</div>
<div class="row-fluid">
  <div class="span8">
    <h2><%= raw @project.title %></h2>
    <p><%= raw @project.description %></p>
  </div>
  <div class="span4">
    <blockquote><%=raw @project.testimonial %></blockquote>

  </div>

</div>



<!-- BELOW WILL NOT DISPLAY -ABOVE in PROGRESS -->
<% content_for :body_content_title do %>
  <%= @project.title %>
<% end %>

<% content_for :body do %>
  <section>
    <h1>Title</h1>
    <p>
      <%=raw @project.title %>
    </p>
  </section>
  <section>
    <h1>Excerpt</h1>
    <p>
      <%=raw @project.excerpt %>
    </p>
  </section>
  <section>
    <h1>Description</h1>
    <p>
      <%=raw @project.description %>
    </p>
  </section>
  <section>
    <h1>Pdf Link</h1>
    <p>
      <%=raw @project.pdf_link %>
    </p>
  </section>
  <section>
    <h1>Hero Image</h1>
    <p>
      <%= image_fu @project.hero_image, nil %>
    </p>
  </section>
  <section>
    <h1>Project Status</h1>
    <p>
      <%=raw @project.project_status %>
    </p>
  </section>
  <section>
    <h1>Testimonial</h1>
    <p>
      <%=raw @project.testimonial %>
    </p>
  </section>
<% end %>

<% content_for :side_body do %>
  <aside>
    <h2><%= t('.other') %></h2>
    <ul id="projects">
      <% @projects.each do |project| %>
        <li>
          <%= link_to project.title, refinery.projects_project_path(project) %>
        </li>
      <% end %>
    </ul>
  </aside>
<% end %>

<%#= render '/refinery/content_page' %>
