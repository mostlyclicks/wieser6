


<div class="row-fluid">
  

</div>
<div class="row-fluid" id="l2-main">
  <div class="span7">
    <h1 id="body_content_title"><%= raw @project.title %></h1>
    <small><%= raw @project.tag_list.map { |t| link_to t, refinery.projects_tag_path(t)}.join(', ') %></small>
    <p><%= raw @project.description %></p>
    <p><%#= refinery.@project.pdf_file_id %></p>

    <div id="blueimp-gallery" class="blueimp-gallery blueimp-gallery-controls">
      <div class="slides"></div>
      <h3 class="title"></h3>
      <a class="prev">‹</a>
      <a class="next">›</a>
      <a class="close">×</a>
      <a class="play-pause"></a>
      <ol class="indicator"></ol>
    </div>

  </div>
  <div class="span5">
    <%= image_fu @project.hero_image, nil %>

    <div class="row-fluid">
  <div class="span12" id="links">
    <h4>Project Gallery</h4>Us
    <ul id="project-gallery-show">
    <% @project.images.each do |i| %>
      <li>
        <%= link_to image_tag(i.thumbnail("64x64#c").url), i.thumbnail("900x600").url %>
      </li>
    <% end %>
  </ul>

        <%= render '/shared/contact_info' %>

  <script>
  document.getElementById('links').onclick = function (event) {
      event = event || window.event;
      var target = event.target || event.srcElement,
          link = target.src ? target.parentNode : target,
          options = {index: link, event: event},
          links = this.getElementsByTagName('a');
      blueimp.Gallery(links, options);
  };
  </script>
  </div>
</div>


  </div>




