<div class="row-fluid">
  <div class="span8" id="l2-main">
    <h1 id="body_content_title">Completed Projects</h1>
      <div class="row-fluid">
      <ul id="project-gallery">
        <% @completed_projects.each do |project| %>
          <li>
            <%= image_fu(project.hero_image, '150x150#c') %>
            <h4><%= link_to project.title, refinery.projects_project_path(project) %></h4>
          </li>
        <% end %>
      </ul>
    </div>
  </div>

  <div class="span4" id="sidebar">
    <p><%= link_to 'Current Projects', refinery.projects_root_path %></p>
    <p><%= link_to 'Archived Projects', refinery.projects_projects_archived_path %></p>
    <%= render '/shared/contact_info' %>
  </div>

</div>