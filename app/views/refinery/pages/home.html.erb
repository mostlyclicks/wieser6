
<% content_for :intro do %>
<div id="myCarousel" class="carousel slide carousel-fade">
  
  <ol class="carousel-indicators">
    <% @projects_for_home.each_with_index do |p, index| %>
    <li data-target="#myCarousel" data-slide-to="<%= index %>" class="<% if index == 0 %>active<% end %>"></li>
    <% end %>
  </ol> 
  
<div class="carousel-inner">

<% @projects_for_home.each_with_index do |p, index| %>
<div class="<% if index == 0 %>active<% end %> item">
  
    <div id="intro">
      <!-- load image here for phone and tablet -->
      <%= link_to (image_fu p.hero_image, nil, id: 'big-image', class: 'hidden-desktop'), refinery.projects_project_path(p) %>
      <div class="container home-hero">
    		<div class="row-fluid">
    			<div class="span5 offset7" id="quotebox" >
            <h1><%= link_to p.title, refinery.projects_project_path(p) %></h1>
      			<div class="hidden-phone"><p><%#= raw p.testimonial %></p></div>
    			</div>
    		</div>
      </div>
      <!-- load image here for desktop - hide for phone and tablet -->
      <%= link_to (image_fu p.hero_image, nil, id: 'big-image', class: 'hidden-phone hidden-tablet'), refinery.projects_project_path(p)  %>
    </div>
  
</div>
<% end %>


</div>
<!-- Carousel nav -->
  <a class="carousel-control left" href="#myCarousel" data-slide="prev">&lsaquo;</a>
  <a class="carousel-control right" href="#myCarousel" data-slide="next">&rsaquo;</a>
</div> 



<% end %>

<div class="row-fluid" id="home-bucket-section">

<div class="row-fluid home-buckets" style="margin-top:-100px;position:relative;">
	<div class="span12" style="padding:20px;">
	<div class="span4">
		<h1>Trust<br />Partnership<br />Excellence</h1>
		<h3><i class="icon-chevron-right"></i> <%= link_to 'Why Wieser Brothers', '/why-wieser-brothers' %></h3>
	</div>
	<div class="span4">
    <%= image_fu(@testimonial.hero_image, '357x140#c') %>
		<%#= image_tag "bucket2.png" %>
		<h3><i class="icon-chevron-right"></i> <%= link_to 'Our Latest Projects', '/projects' %></h3>
	</div>
	<div class="span4">
		<%= image_tag "bucket3.png" %>
		<h3><i class="icon-chevron-right"></i> Green Technologies</h3>
	</div>
</div>

</div>
<%#= render '/refinery/content_page' %>

</div>
