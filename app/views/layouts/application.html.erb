<!DOCTYPE html>
<%= render '/refinery/html_tag' %>
<meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1">
  <% site_bar = render('/refinery/site_bar', :head => true) -%>
  <%= render '/refinery/head' %>
  <body>
    <%= site_bar -%>
    <%= render '/refinery/ie6check' if request.env['HTTP_USER_AGENT'] =~ /MSIE/ -%>

    <div id="page_container">
      <div id="home">

        <div class="container" style="position:relative;z-index:200;">
          <header id="nav">
            <%= render '/refinery/header' -%>
          </header>
        </div><!-- top container -->

       
       
        <%= yield :intro %>
       
      </div>
      
        

        <div class="container">
          <section id="page" >
            
            
            <%#= Refinery.extensions %>
            <%#= link_to 'Projects', refinery.projects_projects_path %>
            <%#= link_to 'home', refinery.root_path %>
            
            <%= yield %>
          </section>
        </div><!-- middle container -->


        <footer>
        <div class="container">
        <div class="row-fluid" style="min-height:250px;">
          <div class="span4 form-horizontal" id="email-sign-up">
            <form>
              <fieldset>
                <label>Search</label>
                <input type="text" placeholder="Search..." class="span9">
                <button type="submit" class="btn">Submit</button>
              </fieldset>
            </form>
          </div>
          <div class="span2">
            <ul>
              <li>Why Wieser Brothers</li>
              <li>Trust</li>
              <li>Excellence</li>
              <li>Partnership</li>
            </ul>
          </div>
          <div class="span2">
            <ul>
              <li>Projects</li>
              <li>Current Projects</li>
              <li>Completed Projects</li>
              <li>Archives</li>
            </ul>
          </div>
          <div class="span2">
            <ul>
              <li>Services</li>
              <li>Design/Build</li>
              <li>Commercial</li>
              <li>Residential</li>
              <li>Concrete</li>
            </ul>
          </div>
          <div class="span2">
            <ul>
              <li>Contact Us</li>
              <li>News</li>
              <li>Employment Opportunities</li>
              <li>Bid Opportunities</li>
            </ul>
          </div>
          <%= render '/refinery/footer' -%>
        </div>
      </div>
      </footer>


      <%= yield :test %>

      </div>
      

    

    

   
      
    </div><!-- footer container -->
   



    </div>
    <%= render '/refinery/javascripts' %>
    <script type="text/javascript">

var $ = jQuery.noConflict();

$(document).ready(function() {
 $('#myCarousel').carousel({
       interval: 4000,
          cycle: true
 });
});

</script>
  </body>
</html>
